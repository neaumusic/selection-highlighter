{
  "manifest_version": 2,
  "name": "Selection Highlighter",
  "version": "${PACKAGE_VERSION}",
  "description": "Highlight occurrences of selected text, with or without a keypress.",
  "content_scripts": [
    {
      "all_frames": true,
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "js": ["${CONTENT_SCRIPT_PATH}/highlighter.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{ee192302-b8b3-450e-a7f8-a3dabdccf2a8}"
    }
  },
  "browser_action": {
    "default_icon": "${IMAGES_PATH}/icon.png"
  },
  "icons": {
    "1024": "${IMAGES_PATH}/icon.png"
  },
  "permissions": ["storage"]
}
