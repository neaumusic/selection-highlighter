{
  "manifest_version": 2,
  "name": "Selection Highlighter",
  "version": "${PACKAGE_VERSION}",
  "description": "Highlight occurrences of selected text, with or without a keypress.",
  "options_page": "${OPTIONS_PAGE_PATH}/options_page.html",
  "content_scripts": [{
    "all_frames": true,
    "run_at": "document_end",
    "matches": ["<all_urls>"],
    "js": ["${HIGHLIGHTER_PATH}/highlighter.js"]
  }],
  "browser_action": {
    "default_icon": "${IMAGES_PATH}/icon.png"
  },
  "icons": {
    "1024": "${IMAGES_PATH}/icon.png"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "${OPTIONS_PATH}/default_options_text.js"
  ]
}